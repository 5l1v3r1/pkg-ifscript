{
    "name": "pkgscript",
    "version": "1.0.0",
    "description": "package.json scripts extended",
    "main": "dist/index.js",
    "scripts": {
        "tsc": "tsc",
        "build": "npm run tsc",
        "start": "npm run build; node .",
        "eslint": "eslint",
        "foo": "node .",
        "bar": "echo $PATH"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tncga/pkgscript.git"
    },
    "keywords": [
        "npm",
        "script",
        "package.json",
        "package"
    ],
    "author": "tncga",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/tncga/pkgscript/issues"
    },
    "homepage": "https://github.com/tncga/pkgscript#readme",
    "devDependencies": {
        "@types/node": "^12.0.4",
        "@typescript-eslint/eslint-plugin": "^1.9.0",
        "@typescript-eslint/parser": "^1.9.0",
        "eslint": "^5.16.0",
        "typescript": "^3.4.5"
    },
    "pkgscript": {
        "posixlike": false,
        "scripts": {
            "foo": [
                {
                    "platform": ["win32", "linux"],
                    "arch": "x64",
                    "shell": "sh",
                    "script": "echo 11111111111111"
                },
                {
                    "platform": ["linux"],
                    "arch": "x86",
                    "shell": "sh",
                    "script": "echo ssss"
                },
                {
                    "platform": "linux",
                    "shell": "sh",
                    "script": "ps -p $fish_pid -co args --no-headers"
                }
            ]
        }
    }
}
